{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "languageVersion": "2.0",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.39.26.7824",
      "templateHash": "17535707365532381642"
    }
  },
  "parameters": {
    "appName": {
      "type": "string",
      "defaultValue": "Beacon",
      "metadata": {
        "description": "Application name (used for app registration and resources)"
      }
    },
    "appPlanSku": {
      "type": "string",
      "defaultValue": "Consumption (Y1) - Pay per execution",
      "allowedValues": [
        "Consumption (Y1) - Pay per execution",
        "Elastic Premium (EP1) - Always ready",
        "Basic (B1) - Dedicated"
      ],
      "metadata": {
        "description": "App Service Plan SKU"
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "skuMap": {
      "Consumption (Y1) - Pay per execution": {
        "name": "Y1",
        "tier": "Dynamic"
      },
      "Elastic Premium (EP1) - Always ready": {
        "name": "EP1",
        "tier": "ElasticPremium"
      },
      "Basic (B1) - Dedicated": {
        "name": "B1",
        "tier": "Basic"
      }
    },
    "selectedSku": "[variables('skuMap')[parameters('appPlanSku')]]",
    "uniqueSuffix": "[uniqueString(resourceGroup().id)]",
    "appNameLower": "[toLower(parameters('appName'))]",
    "cleanName": "[replace(variables('appNameLower'), '-', '')]",
    "storageAccountName": "[format('{0}{1}', take(variables('cleanName'), 10), take(variables('uniqueSuffix'), 10))]",
    "functionAppName": "[format('{0}-func-{1}', variables('appNameLower'), take(variables('uniqueSuffix'), 6))]",
    "appServicePlanName": "[format('{0}-plan', variables('appNameLower'))]",
    "appRegistrationName": "[parameters('appName')]"
  },
  "imports": {
    "microsoftGraphV1": {
      "provider": "MicrosoftGraph",
      "version": "0.1.9-preview"
    }
  },
  "resources": {
    "appRegistration": {
      "import": "microsoftGraphV1",
      "type": "Microsoft.Graph/applications@v1.0",
      "properties": {
        "displayName": "[variables('appRegistrationName')]",
        "uniqueName": "[variables('appRegistrationName')]",
        "signInAudience": "AzureADMultipleOrgs",
        "requiredResourceAccess": [
          {
            "resourceAppId": "00000003-0000-0000-c000-000000000000",
            "resourceAccess": [
              {
                "id": "b0afded3-3588-46d8-8b3d-9842eff778da",
                "type": "Role"
              },
              {
                "id": "bf394140-e372-4bf9-a898-299cfc7564e5",
                "type": "Role"
              },
              {
                "id": "6e472fd1-ad78-48da-a0f0-97ab2c6b769e",
                "type": "Role"
              },
              {
                "id": "7ab1d382-f21e-4acd-a863-ba3e13f7da61",
                "type": "Role"
              }
            ]
          },
          {
            "resourceAppId": "c5393580-f805-4401-95e8-94b7a6ef2fc2",
            "resourceAccess": [
              {
                "id": "594c1fb6-4f81-4f83-8c50-76c0e986b4be",
                "type": "Role"
              },
              {
                "id": "4807a72c-ad46-4f91-a9f3-845fce184694",
                "type": "Role"
              }
            ]
          }
        ]
      }
    },
    "servicePrincipal": {
      "import": "microsoftGraphV1",
      "type": "Microsoft.Graph/servicePrincipals@v1.0",
      "properties": {
        "appId": "[reference('appRegistration').appId]"
      },
      "dependsOn": [
        "appRegistration"
      ]
    },
    "storageAccount": {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "[variables('storageAccountName')]",
      "location": "[variables('location')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "supportsHttpsTrafficOnly": true,
        "minimumTlsVersion": "TLS1_2",
        "allowBlobPublicAccess": false
      }
    },
    "appServicePlan": {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2023-01-01",
      "name": "[variables('appServicePlanName')]",
      "location": "[variables('location')]",
      "sku": {
        "name": "[variables('selectedSku').name]",
        "tier": "[variables('selectedSku').tier]"
      },
      "properties": {
        "reserved": false
      }
    },
    "functionApp": {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2023-01-01",
      "name": "[variables('functionAppName')]",
      "location": "[variables('location')]",
      "kind": "functionapp",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "siteConfig": {
          "netFrameworkVersion": "v8.0",
          "nodeVersion": "~20",
          "cors": {
            "allowedOrigins": [
              "https://portal.azure.com"
            ]
          },
          "appSettings": [
            {
              "name": "AzureWebJobsStorage",
              "value": "[format('DefaultEndpointsProtocol=https;AccountName={0};EndpointSuffix={1};AccountKey={2}', variables('storageAccountName'), environment().suffixes.storage, listKeys('storageAccount', '2023-01-01').keys[0].value)]"
            },
            {
              "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
              "value": "[format('DefaultEndpointsProtocol=https;AccountName={0};EndpointSuffix={1};AccountKey={2}', variables('storageAccountName'), environment().suffixes.storage, listKeys('storageAccount', '2023-01-01').keys[0].value)]"
            },
            {
              "name": "WEBSITE_CONTENTSHARE",
              "value": "[toLower(variables('functionAppName'))]"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~4"
            },
            {
              "name": "FUNCTIONS_WORKER_RUNTIME",
              "value": "node"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "~20"
            },
            {
              "name": "AZURE_CLIENT_ID",
              "value": "[reference('appRegistration').appId]"
            },
            {
              "name": "AZURE_TENANT_ID",
              "value": "[subscription().tenantId]"
            },
            {
              "name": "SCM_DO_BUILD_DURING_DEPLOYMENT",
              "value": "true"
            },
            {
              "name": "ENABLE_ORYX_BUILD",
              "value": "true"
            }
          ]
        },
        "httpsOnly": true
      },
      "dependsOn": [
        "appRegistration",
        "appServicePlan",
        "storageAccount"
      ]
    },
    "federatedCredential": {
      "import": "microsoftGraphV1",
      "type": "Microsoft.Graph/applications/federatedIdentityCredentials@v1.0",
      "properties": {
        "name": "[format('{0}/FuncAppMSI', reference('appRegistration').uniqueName)]",
        "audiences": [
          "api://AzureADTokenExchange"
        ],
        "issuer": "[format('{0}{1}/v2.0', environment().authentication.loginEndpoint, subscription().tenantId)]",
        "subject": "[reference('functionApp', '2023-01-01', 'full').identity.principalId]",
        "description": "[format('Federated credential for {0} managed identity', variables('functionAppName'))]"
      },
      "dependsOn": [
        "appRegistration",
        "functionApp"
      ]
    },
    "sourceControl": {
      "type": "Microsoft.Web/sites/sourcecontrols",
      "apiVersion": "2023-01-01",
      "name": "[format('{0}/{1}', variables('functionAppName'), 'web')]",
      "properties": {
        "repoUrl": "https://github.com/emildosen/beacon",
        "branch": "main",
        "isManualIntegration": true
      },
      "dependsOn": [
        "functionApp"
      ]
    }
  },
  "outputs": {
    "functionAppName": {
      "type": "string",
      "value": "[variables('functionAppName')]"
    },
    "functionAppUrl": {
      "type": "string",
      "value": "[format('https://{0}', reference('functionApp').defaultHostName)]"
    },
    "functionAppPrincipalId": {
      "type": "string",
      "value": "[reference('functionApp', '2023-01-01', 'full').identity.principalId]"
    },
    "appRegistrationAppId": {
      "type": "string",
      "value": "[reference('appRegistration').appId]"
    },
    "appRegistrationName": {
      "type": "string",
      "value": "[reference('appRegistration').displayName]"
    },
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageAccountName')]"
    },
    "adminConsentUrl": {
      "type": "string",
      "value": "[format('{0}{1}/adminconsent?client_id={2}', environment().authentication.loginEndpoint, subscription().tenantId, reference('appRegistration').appId)]"
    }
  }
}