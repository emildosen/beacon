{
  "name": "beacon",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/functions/index.js",
  "scripts": {
    "build": "npm run build:functions && npm run build:admin",
    "build:functions": "tsc",
    "build:admin": "npm run --prefix src/admin build",
    "start": "npm run build && func start",
    "dev": "npm run build && func start",
    "dev:admin": "npm run --prefix src/admin dev",
    "watch": "tsc -w",
    "postinstall": "cd src/admin && npm install",
    "test-rules": "node --import tsx src/scripts/test-rules.ts",
    "docs:generate": "node --import tsx src/scripts/generate-rules-docs.ts",
    "docs:dev": "npm run docs:generate && vitepress dev docs",
    "docs:build": "npm run docs:generate && vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "M365 security alerting tool for MSPs",
  "dependencies": {
    "@azure/data-tables": "^13.3.2",
    "@azure/functions": "^4.10.0",
    "@azure/identity": "^4.13.0",
    "@azure/monitor-ingestion": "^1.2.0",
    "@azure/storage-blob": "^12.26.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "jose": "^6.1.3"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "azure-functions-core-tools": "^4.6.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4"
  }
}
