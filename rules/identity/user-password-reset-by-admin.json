{
  "name": "User password reset by admin",
  "description": "Administrator reset a user's password (actor differs from target)",
  "severity": "Medium",
  "enabled": true,
  "source": "AuditLog",
  "mitre": {
    "tactic": "Persistence",
    "technique": "T1098"
  },
  "conditions": {
    "match": "all",
    "rules": [
      { "field": "Operation", "operator": "Equals", "value": "Reset user password" },
      { "field": "InitiatedBy.User.UserPrincipalName", "operator": "NotEquals", "value": "{{TargetResources.0.UserPrincipalName}}" }
    ]
  },
  "meta": {
    "author": "emildosen",
    "created": "2025-12-26",
    "updated": "2025-12-26"
  }
}
