    {
      "type": 3,
      "content": {
        "version": "KqlItem/1.0",
        "query": "let selectedClients = dynamic([{ClientTenant}]);\nBeacon_Alerts_CL\n| where TimeGenerated {TimeRange}\n| where '*' in (selectedClients) or ClientTenantName in (selectedClients)\n| summarize\n    Critical = countif(Severity == 'Critical'),\n    High = countif(Severity == 'High'),\n    Medium = countif(Severity == 'Medium'),\n    Low = countif(Severity == 'Low')\n    by bin(TimeGenerated, 1d)\n| order by TimeGenerated asc",
        "size": 0,
        "title": "Severity Trend Over Time",
        "queryType": 0,
        "resourceType": "microsoft.operationalinsights/workspaces",
        "visualization": "areachart",
        "chartSettings": {
          "xAxis": "TimeGenerated",
          "yAxis": ["Critical", "High", "Medium", "Low"],
          "seriesLabelSettings": [
            { "seriesName": "Critical", "color": "redBright" },
            { "seriesName": "High", "color": "orange" },
            { "seriesName": "Medium", "color": "yellow" },
            { "seriesName": "Low", "color": "blue" }
          ]
        }
      },
      "name": "chart-severity-trend"
    },
    {
      "type": 3,
      "content": {
        "version": "KqlItem/1.0",
        "query": "let selectedClients = dynamic([{ClientTenant}]);\nBeacon_Alerts_CL\n| where TimeGenerated {TimeRange}\n| where '*' in (selectedClients) or ClientTenantName in (selectedClients)\n| project TimeGenerated, ClientTenantName, User, RuleName, Severity, SourceType, RawEventSummary\n| order by TimeGenerated desc\n| take 100",
        "size": 0,
        "title": "Recent Alerts",
        "queryType": 0,
        "resourceType": "microsoft.operationalinsights/workspaces",
        "visualization": "table",
        "gridSettings": {
          "formatters": [
            {
              "columnMatch": "TimeGenerated",
              "formatter": 6,
              "formatOptions": { "customColumnWidthSetting": "180px" }
            },
            {
              "columnMatch": "Severity",
              "formatter": 18,
              "formatOptions": {
                "thresholdsOptions": "colors",
                "thresholdsGrid": [
                  { "operator": "==", "thresholdValue": "Critical", "representation": "redBright", "text": "{0}{1}" },
                  { "operator": "==", "thresholdValue": "High", "representation": "orange", "text": "{0}{1}" },
                  { "operator": "==", "thresholdValue": "Medium", "representation": "yellow", "text": "{0}{1}" },
                  { "operator": "==", "thresholdValue": "Low", "representation": "blue", "text": "{0}{1}" },
                  { "operator": "Default", "representation": "gray", "text": "{0}{1}" }
                ]
              }
            },
            {
              "columnMatch": "RawEventSummary",
              "formatter": 0,
              "formatOptions": { "customColumnWidthSetting": "400px" }
            }
          ],
          "sortBy": [{ "itemKey": "TimeGenerated", "sortOrder": 2 }]
        }
      },
      "name": "table-recent-alerts"
