            "version": "KqlParameterItem/1.0",
            "name": "TimeRange",
            "type": 4,
            "isRequired": true,
            "typeSettings": {
              "selectableValues": [
                { "durationMs": 86400000 },
                { "durationMs": 604800000 },
                { "durationMs": 2592000000 }
              ]
            },
            "value": { "durationMs": 604800000 },
            "label": "Time Range"
          },
          {
            "id": "b3c6d8f2-9e4a-5b6c-0d2e-3f4a5b6c7d8e",
            "version": "KqlParameterItem/1.0",
            "name": "ClientTenant",
            "type": 2,
            "isRequired": false,
            "multiSelect": true,
            "quote": "'",
            "delimiter": ",",
            "query": "Beacon_Alerts_CL\n| where TimeGenerated > ago(30d)\n| where isnotempty(ClientTenantName)\n| distinct ClientTenantName\n| order by ClientTenantName asc",
            "queryType": 0,
            "resourceType": "microsoft.operationalinsights/workspaces",
            "typeSettings": {
              "additionalResourceOptions": ["value::all"],
              "selectAllValue": "*"
            },
            "value": ["value::all"],
            "label": "Client Tenant"
          }
        ],
        "style": "pills",
        "queryType": 0,
        "resourceType": "microsoft.operationalinsights/workspaces"
      },
      "name": "parameters"
    },
    {
      "type": 3,
      "content": {
        "version": "KqlItem/1.0",
        "query": "let selectedClients = dynamic([{ClientTenant}]);\nBeacon_Alerts_CL\n| where TimeGenerated {TimeRange}\n| where '*' in (selectedClients) or ClientTenantName in (selectedClients)\n| count",
        "size": 4,
        "title": "Total Alerts",
        "queryType": 0,
        "resourceType": "microsoft.operationalinsights/workspaces",
        "visualization": "tiles",
        "tileSettings": {
          "titleContent": { "columnMatch": "Count", "formatter": 12, "formatOptions": { "palette": "auto" } },
          "showBorder": true
        }
      },
      "customWidth": "25",
      "name": "tile-total-alerts"
    },
    {
      "type": 3,
      "content": {
